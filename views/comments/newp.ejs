<% include ../partials/header %>
<div>
    <div class="row">
        <h1 style="text-align: center">Add new comment to <%= phone.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/phones/<%= phone._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/phones">Go back</a>
        </div>
    </div>
</div>
    <% include ../partials/footer %>