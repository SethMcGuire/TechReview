<% include ../partials/header %>

<div>
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpTech!</h1>
            <p>
                <a class= "btn btn-info btn-lg" href="/computers/new">Add new computer</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% computers.forEach(function(computer){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src= "<%= computer.image %>">
                    <div class="caption">
                        <h4><%= computer.name %></h4>
                    </div>
                    <p>
                        <a href="/computers/<%= computer._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>